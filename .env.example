# Domain Configuration
DOMAIN=vibehost.io
ACME_EMAIL=admin@vibehost.io

# Database Passwords (for Discourse instances)
POSTGRES_PASSWORD=changeme
REDIS_PASSWORD=changeme

# Application
NODE_ENV=production
PORT=3000

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database (SQLite for simplicity, can be changed to PostgreSQL)
DB_PATH=./backend/database.sqlite

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@vibehost.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
